<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".doctordashboard">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#3F51B5"
        app:cardElevation="6dp">
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/slider"
            android:layout_width="370dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            app:auto_cycle="true"
            app:corner_radius="20"
            app:delay="0"
            app:cardBackgroundColor="#3F51B5"
            app:error_image="@drawable/salute"
            app:period="1000"
            tools:ignore="MissingClass" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/profile"
            android:src="@drawable/dr"
            android:layout_centerInParent="true">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtprofile"
            android:text="Your Profile"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:layout_below="@+id/profile">
        </TextView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/docbtnprofile"
            android:background="@android:color/transparent"
            ></Button>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/rute"
                android:src="@drawable/video"
                android:layout_centerInParent="true">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtrute"
                android:text="Manage Appointments"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:layout_below="@+id/rute">
            </TextView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnrout"
                android:background="@android:color/transparent"></Button>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
   </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/mybook"
                    android:src="@drawable/feedback"
                    android:layout_centerInParent="true">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtbook"
                    android:text="My appointments"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:layout_below="@+id/mybook">
                </TextView>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnbook"
                    android:background="@android:color/transparent"
                    ></Button>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/pass"
                    android:src="@drawable/codepass"
                    android:layout_centerInParent="true">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/changedrpass"
                    android:text="Change Password"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:layout_below="@+id/pass">
                </TextView>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/clicktochange"
                    android:background="@android:color/transparent"
                    ></Button>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    </LinearLayout>