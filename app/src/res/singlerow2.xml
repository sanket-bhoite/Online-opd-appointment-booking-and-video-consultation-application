<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="10dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dr."
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/drname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor name"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_marginLeft="40dp"/>


        <TextView
            android:id="@+id/drmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/drname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="mail-id"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/drphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drmail"
            android:text="mob-no"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/apdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drphone"
            android:text="date"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/drtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/apdate"
            android:text="Time"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/drcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drtime"
            android:text="Category"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/userdrname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drtime"
            android:text="druser"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:textColor="#000"
            android:textSize="25sp" />


        <Button
            android:id="@+id/del"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="130dp"
            android:layout_below="@+id/drcategory"
            android:text="Cancel"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>